rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Data & Subcollections
    // Using recursive wildcard to match any document under users/{userId}
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public Moat Analysis
    match /moat_analysis_public/{ticker} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Legacy Moat Analysis
    match /moat_analysis/{ticker} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
